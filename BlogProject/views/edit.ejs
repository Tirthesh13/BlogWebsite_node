<%- include("partials/header.ejs") %>

<div class="container">
    <h1>Edit Blog.</h1>
    <form action="/edit/<%= blog.id %>" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="blog-title" id="title" value="<%= blog.title %>">
        </div>
        <div class="input-group">
            <span class="input-group-text">Blog Body</span>
            <textarea class="form-control" name="blog-body" id="content" aria-label="With textarea"><%= blog.content %></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Update Blog</button>
    </form>
</div>


